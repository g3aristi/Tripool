<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.testapp.AddPoolActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Adding a pool"
        android:textColor="#9A0A0A"
        android:id="@+id/textView5"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="318dp"
        android:layout_height="320dp"
        android:background="#9A0A0A"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.22"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/radioGroup">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="25dp"
            android:text="Name of the pool"
            android:textColor="#BDBDBD"
            android:textAlignment="center"
            android:id="@+id/editText"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add people using:"
            android:layout_marginRight="35dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="15sp"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:id="@+id/textView4" />

        <GridView
            android:layout_width="254dp"
            android:layout_height="134dp"
            android:background="#FFFFFF"
            android:id="@+id/gridView"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="People in your pool: "
            android:layout_marginRight="35dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="15dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/textView6" />

        <GridView
            android:layout_width="254dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:id="@+id/gridView2"
            android:layout_gravity="center_horizontal" />

    </RadioGroup>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Skip step"
        android:id="@+id/skipBtn"
        android:layout_gravity="right"
        android:layout_below="@+id/radioGroup"
        android:layout_alignRight="@+id/radioGroup"
        android:layout_alignEnd="@+id/radioGroup" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:textColor="#9A0A0A"
        android:id="@+id/finishAddPool"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
